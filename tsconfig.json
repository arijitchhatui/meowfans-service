{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/constants": [
        "libs/constants/src"
      ],
      "@app/constants/*": [
        "libs/constants/src/*"
      ],
      "@app/decorators": [
        "./libs/decorators"
      ],
      "@app/helpers": [
        "./libs/helpers"
      ],
      "@app/interceptors": [
        "./libs/interceptors"
      ],
      "@app/methods": [
        "./libs/methods"
      ],
      "@app/pipes": [
        "./libs/pipes"
      ],
      "@app/validation": [
        "./libs/validation"
      ],
      "@app/validators": [
        "./libs/validators"
      ]
    },
    "baseUrl": "./"
  }
}